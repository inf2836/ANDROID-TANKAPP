<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="17sp"
            android:textColor="@color/Black"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/textView_street"
            android:paddingLeft="160dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_name"
            android:layout_margin="0dp"
            android:textStyle="bold|italic"
            android:textSize="10sp"/>

    <TextView
            android:id="@+id/textView_place"
            android:paddingLeft="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_street"
            android:paddingTop="0dp"
            android:layout_margin="0dp"
            android:textStyle="bold|italic"
            android:textSize="10sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_dist"
            android:paddingTop="55dp"
            android:textColor="#307D7E"
            android:textStyle="bold|italic"
            android:textSize="10sp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/textView_dPreis"
            android:background="#307D7E"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/Milk_White"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_alignBottom="@id/textView_dist"
            android:layout_marginStart="67dp"/>
    <ImageView
            android:layout_width="50dp"
            android:paddingTop="0dp"
            android:paddingLeft="5dp"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/info"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView3"
            android:layout_alignBottom="@+id/textView_place"/>


</RelativeLayout>
